# GameKey Bot Environment Configuration

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/gamekey
MONGODB_FALLBACK_URI=mongodb://127.0.0.1:27017/gamekey
MONGODB_ATLAS_URI=your_atlas_connection_string

# Telegram Bot Configuration
API_TOKEN=your_telegram_bot_token

# NOWPayments Configuration
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_SANDBOX=false
NOWPAYMENTS_WEBHOOK_SECRET=your_webhook_secret

# Server Configuration
PORT=3000
NODE_ENV=development

# Security Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
JWT_SECRET=your_jwt_secret_key

# Rate Limiting Configuration
RATE_LIMIT_GENERAL=1000
RATE_LIMIT_API=500
RATE_LIMIT_STRICT=100

# Logging Configuration
LOG_LEVEL=info
ENABLE_ERROR_TRACKING=false

# Admin Configuration
ADMIN_TELEGRAM_IDS=123456789,987654321

# Email Configuration (optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30